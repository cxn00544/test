.index .my-content {
  padding: 0 30rpx;
  background: linear-gradient(180deg, #3B7779 0%, #275B5D 100%);
  height: 1068rpx;
}
.index .my-content .head {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
}
.index .my-content .head .user image {
  margin-right: 20rpx;
  width: 80rpx;
  height: 80rpx;
  border: 1rpx solid #FFFFFF;
  border-radius: 50%;
}
.index .my-content .head .user text {
  font-size: 32rpx;
  font-family: PingFangSC-Bold, PingFang SC;
  font-weight: bold;
  color: #FFFFFF;
}
.index .my-content .head .news {
  display: flex;
  margin-right: 50rpx;
}
.index .my-content .head .news view:first-of-type {
  margin-right: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 169rpx;
  height: 49rpx;
  background: #275B5D;
  border-radius: 27rpx;
}
.index .my-content .head .news view:first-of-type image {
  margin-right: 10rpx;
  width: 24rpx;
  height: 24rpx;
}
.index .my-content .head .news view:first-of-type text {
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #F3C880;
}
.index .my-content .head .news view:last-of-type {
  position: relative;
}
.index .my-content .head .news view:last-of-type image {
  width: 40rpx;
  height: 45rpx;
}
.index .my-content .head .news view:last-of-type text {
  position: absolute;
  top: -7px;
  right: -20px;
  text-align: center;
  display: block;
  width: 45rpx;
  height: 25rpx;
  line-height: 25rpx;
  background: #FF4444;
  border-radius: 15rpx 15rpx 15rpx 0rpx;
  font-size: 22rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #FFFFFF;
}
.index .my-content .member .card {
  padding: 40rpx;
  height: 327rpx;
}
.index .my-content .member .card > view:first-child {
  font-size: 44rpx;
  font-family: YouSheBiaoTiHei;
  color: #FFFFFF;
}
.index .my-content .member .card > view:nth-child(2) {
  margin-top: 30rpx;
  font-size: 22rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #8E8E8E;
}
.index .my-content .member .card > view:nth-child(2) .u-line-progress {
  width: 60%;
  margin-top: 15rpx;
}
.index .my-content .member .card > view:nth-child(3) {
  margin-top: 30rpx;
  font-size: 22rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #8E8E8E;
}
.index .my-content .member .card > view:nth-child(3) image {
  margin-left: 15rpx;
  width: 10rpx;
  height: 16rpx;
}
.index .my-content .member .card > view:nth-child(4) {
  font-size: 48rpx;
  font-family: DINPro-Bold, DINPro;
  font-weight: bold;
  color: #FFFFFF;
}
.index .my-content .member .list {
  padding: 30rpx 15rpx;
  display: flex;
  justify-content: space-around;
  background: url('https://gymoo-project-cdn.oss-cn-shenzhen.aliyuncs.com/yunce_project/shiwanWine-img/xzjh.png') no-repeat;
}
.index .my-content .member .list view {
  text-align: center;
}
.index .my-content .member .list view image {
  margin-bottom: 15rpx;
  width: 70rpx;
  height: 70rpx;
}
.index .my-content .member .list view text {
  display: block;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #FFFFFF;
}

